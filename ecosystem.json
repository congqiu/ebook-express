{
  "name"        : "ebook-express",
  "script"      : "./bin/www",
  "cwd"         : "./",
  "watch": [
    "bin",
    "routers"
  ],
  "ignore_watch" : [
    "node_modules", 
    "logs",
    "public"
  ],
  "watch_options": {
    "followSymlinks": false
  },
  "error_file" : "./logs/app-err.log",
  "out_file"   : "./logs/app-out.log",
  "env": {
    "NODE_ENV": "production"
  },
  "env_development": {
    "NODE_ENV": "development",
    "PORT": 3000
  }
}