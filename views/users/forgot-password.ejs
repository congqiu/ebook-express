<%- include('../header-width') %>
<div class="container">
	<div class="forgot-password">
		<div class="auth-form">
			<form role="form" action="/forgot-password" method="post" accept-charset="utf-8">
	      <h2 class="form-signin-heading">找回密码</h2>
				<div class="form-errors"><%= typeof errors === 'string' ? errors : '' %></div>
	      <div class="form-group">
	          <label for="email">邮箱<span class="error"><%= errors.email ? errors.email.msg : '' %></span></label>
	          <input type="email" name="email" class="form-control" placeholder="邮箱">
	      </div>
				<div class="form-group">
					<label for="captcha" class="captcha"><img src="<%= captcha %>" alt=""><span class="error"><%= errors.captcha ? errors.captcha.msg : '' %></span></label>
					<input type="text" name="captcha" class="form-control" placeholder="验证码" autocomplete="off">
				</div>
	        	<button class="btn btn-default" type="submit">提交</button>
			</form>
		</div>
	</div>
</div>
<%- include('../footer') %>
