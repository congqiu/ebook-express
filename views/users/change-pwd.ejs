<%- include('../header-width') %>

<div class="container">
  <div class="row change-pwd">
    <div class="auth-form">
        <form role="form" action="/reset/password" method="post" accept-charset="utf-8">
          <h2 class="form-signin-heading">重置密码</h2>
          <div class="form-errors"><%= typeof errors === 'string' ? errors : '' %></div>
          <div class="form-group">
            <label for="username">用户名: <%= this_user.username %><span class="error"><%= errors.username ? errors.username.msg : '' %></span></label>
            <input type="hidden" name="username" value="<%= this_user.username %>">
          </div>
          <div class="form-group">
            <label for="email">邮箱: <%= this_user.email; %></label>
          </div>
          <div class="form-group">
            <label for="password">新密码<span class="error"><%= errors.password ? errors.password.msg : '' %></span></label>
            <input type="password" name="password" class="form-control" placeholder="新密码" >
          </div>
          <div class="form-group">
            <label for="passconf">确认密码</label>
            <input type="password" name="passconf" class="form-control" placeholder="确认密码" >
          </div>
          <input type="hidden" name="create_time" value="<%= this_user.create_time %>">
          <input type="hidden" name="token" value="<%= token %>">
          <button class="btn btn-default" type="submit">更新</button>
        </form>
    </div>
  </div>
</div>

<%- include('../footer') %>