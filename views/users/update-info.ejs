<%- include('../header-width') %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
        <form role="form" method="post" accept-charset="utf-8">
          <h2 class="form-signin-heading">修改信息</h2>
          <div class="form-errors"><%= typeof errors === 'string' ? errors : '' %></div>
          <div class="form-group">
            <label for="username">用户名: <%= user.username %></label>
          </div>
          <div class="form-group">
              <label for="email">邮箱: <%= user.email %></label>
          </div>

          <div class="form-group">
            <label for="nickname">昵称<span class="error"><%= errors.nickname ? errors.nickname.msg : '' %></span></label>
            <input type="text" name="nickname" class="form-control" placeholder="昵称" value="<%= user.nickname %>">
          </div>
          <div class="form-group">
              <label for="sex">性别<span class="error"><%= errors.sex ? errors.sex.msg : '' %></span></label>
              <select name="sex" class="form-control input-lg">
              	<option value="保密">保密</option>
              	<option value="男">男</option>
              	<option value="女">女</option>
              </select>
          </div>
          <button class="btn btn-default" type="submit">更新</button>
        </form>
    </div>
  </div>
</div>

<%- include('../footer') %>