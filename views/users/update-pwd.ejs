<%- include('../header-width') %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
        <form role="form" method="post" accept-charset="utf-8">
          <h2 class="form-signin-heading">修改密码</h2>
          <div class="form-errors"><%= typeof errors === 'string' ? errors : '' %></div>
          <div class="form-group">
            <label for="username">用户名: <%= user.username %></label>
          </div>
          <div class="form-group">
            <label for="passold">原始密码<span class="error"><%= errors.passold ? errors.passold.msg : '' %></span></label>
            <input type="password" name="passold" class="form-control" placeholder="原始密码" >
          </div>
          <div class="form-group">
            <label for="password">新密码<span class="error"><%= errors.password ? errors.password.msg : '' %></span></label>
            <input type="password" name="password" class="form-control" placeholder="新密码" >
          </div>
          <div class="form-group">
            <label for="passconf">确认密码</label>
            <input type="password" name="passconf" class="form-control" placeholder="确认密码" >
          </div>
          <button class="btn btn-default" type="submit">更新</button>
        </form>
    </div>
  </div>
</div>

<%- include('../footer') %>